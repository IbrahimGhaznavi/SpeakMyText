<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/ib_record_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_record_audio"
            android:contentDescription="Record Audio" />

        <ImageButton
            android:id="@+id/ib_take_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_take_picture_to_translate"
            android:contentDescription="Upload to Traslate" />

        <ImageButton
            android:id="@+id/ib_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_messages"
            android:contentDescription="Messages" />
    </LinearLayout>

</ScrollView>